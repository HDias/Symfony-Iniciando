{% extends '::base.html.twig' %}

{% set title = 'Catalogo' %}

{% block title -%}
    {{ parent() ~ title}} 
{% endblock %}

{% block body -%}
    <h1>{{ title }}</h1>


    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
                <td>{{ entity.releaseDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td>{{ entity.imageName }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('catalogo') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('catalogo_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
